[column]
    ui = auto
[branch]
    sort = -committerdate
[commit]
	gpgsign = true
	verbose = true
[core]
	excludesfile = ~/.global_gitignore
	fsmonitor = true
	untrackedcache = true
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[feature]
    experimental = true
[fetch]
    all = true
	prune = true
	pruneTags = true
[gpg]
	format = ssh
[help]
    autocorrect = prompt
[include]
	path = ~/.gitconfig-os-specific
[init]
	defaultBranch = main
[merge]
    conflictStyle = zdiff3
[pull]
	rebase = true
[push]
    default = simple
	autoSetupRemote = true
	followTags = true
[rebase]
    autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoUpdate = true
	enabled = true
